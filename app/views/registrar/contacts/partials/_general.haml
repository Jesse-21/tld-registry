.panel.panel-default
  .panel-heading
    %h3.panel-title= t(:general)
  .panel-body
    %dl.dl-horizontal
      %dt= t(:id)
      %dd= @contact.id

      %dt= Contact.human_attribute_name :auth_info
      %dd
        = tag :input, type: 'text', value: @contact.password, readonly: true,
            class: 'form-control input-sm'

      %br

      %dt= t(:ident)
      %dd= @contact.ident_human_description

      %dt= t(:email)
      %dd= @contact.email

      %dt= t(:phone)
      %dd= @contact.phone
